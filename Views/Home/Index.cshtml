@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <div class="text-center">
        <h1 class="display-4 fw-bold text-primary mb-3">
            <i class="bi bi-journal-check me-2"></i>Welcome to Mini Account System
        </h1>
        <p class="lead text-secondary mb-4">
            Easily manage your vouchers, transactions, and reports in one place.
        </p>

        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light fw-semibold text-dark">
                        <i class="bi bi-stars me-2 text-warning"></i> Key Features
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <i class="bi bi-pencil-square text-success me-2"></i>Create and manage vouchers
                            </li>
                            <li class="list-group-item">
                                <i class="bi bi-arrow-left-right text-primary me-2"></i>Track debit and credit transactions
                            </li>
                            <li class="list-group-item">
                                <i class="bi bi-shield-lock text-danger me-2"></i>Secure login and role-based access
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-header bg-light fw-semibold text-dark">
                        <i class="bi bi-play-circle me-2 text-primary"></i> Get Started
                    </div>
                    <div class="card-body">
                        <p>
                            Use the navigation menu above to access different modules of the system. 
                            If you're an administrator, you can manage users and view system-wide reports.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5">
            <small class="text-muted">
                <i class="bi bi-code-slash me-1"></i>Developed by <strong>Rezaul Karim</strong>
            </small>
        </div>
    </div>
</div>

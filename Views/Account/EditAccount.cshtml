@model MiniAccountManagementSystem.Models.AccountModel
@{
    ViewData["Title"] = "Edit Account";
}

<h2>Edit Account</h2>

<form asp-action="EditAccount" method="post">
    <input type="hidden" asp-for="AccountId" />

    <div class="mb-3">
        <label asp-for="AccountName" class="form-label">Account Name</label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ParentId" class="form-label">Parent ID (optional)</label>
        <input asp-for="ParentId" class="form-control" type="number" />
        <span asp-validation-for="ParentId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="ChartOfAccount" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

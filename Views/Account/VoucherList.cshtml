@model List<VoucherListModel>
@{
    ViewData["Title"] = "Voucher List";
    var role = ViewBag.Role as string;
}

<h2>Voucher List</h2>
<p><strong>Logged in as:</strong> @role</p>

@if (User.IsInRole("Admin") || User.IsInRole("Accountant"))
{
    <a asp-action="CreateVoucher" class="btn btn-success mb-3">Add New Voucher</a>
}

<table id="voucherTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Reference No</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var voucher in Model)
        {
            <tr>
                <td>@voucher.VoucherId</td>
                <td>@voucher.VoucherDate.ToString("yyyy-MM-dd")</td>
                <td>@voucher.ReferenceNo</td>
                <td>@voucher.VoucherType</td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Accountant"))
                    {
                        <a asp-action="EditVoucher" asp-route-id="@voucher.VoucherId" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="DeleteVoucher" asp-route-id="@voucher.VoucherId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">View only</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#voucherTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['copyHtml5', 'excelHtml5'],
                paging: true,
                searching: true,
                ordering: true
            });
        });
    </script>
}

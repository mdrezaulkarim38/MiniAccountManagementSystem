@model MiniAccountManagementSystem.Models.AccountModel

@{
    ViewData["Title"] = "Create Account";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Create New Chart of Accounts</h4>
        </div>

        <div class="card-body">
            <form asp-action="CreateAccount" method="post">
                <div class="mb-3">
                    <label asp-for="AccountName" class="form-label">Account Name <span class="text-danger">*</span></label>
                    <input asp-for="AccountName" class="form-control" placeholder="Enter account name" />
                    <span asp-validation-for="AccountName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ParentId" class="form-label">Parent Account ID</label>
                    <input asp-for="ParentId" class="form-control" type="number" placeholder="Optional" />
                    <span asp-validation-for="ParentId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                    <a asp-action="ChartOfAccount" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
